<?xml version="1.0" encoding="utf-8"?>
<package xmlns="http://schemas.microsoft.com/packaging/2010/07/nuspec.xsd">
    <metadata>
        <id>RememorateFork.Plugin.SpeechRecognition</id>
        <version>2.0.0-beta1</version>
        <title>RememorateFork - ACR Speech Recognition Plugin for Xamarin and Windows</title>
        <summary>Speech Recognition Plugin for iOS, Android, and Windows</summary>
        <description>
Speech Recognition that allows for continuous dictation, phrases, or quick confirmations.

Supported Platforms
- iOS 10+
- Android
- .NET Standard 2.0
        </description>
        <authors>Allan Ritchie, Christi Schneider</authors>
        <owners>Allan Ritchie, Christi Schneider</owners>
        <iconUrl>https://github.com/garie/speechrecognition/icon.png</iconUrl>
        <licenseUrl>https://github.com/garie/speechrecognition/blob/master/LICENSE.md</licenseUrl>
        <projectUrl>https://github.com/garie/speechrecognition</projectUrl>
        <requireLicenseAcceptance>false</requireLicenseAcceptance>
        <tags>windows xamarin xam.pcl speech recognition</tags>
        <releaseNotes>https://github.com/garie/speechrecognition/blob/master/CHANGELOG.md</releaseNotes>
        <dependencies>
            <group>
        	    <dependency id="System.Reactive" version="[4,)" />
                <dependency id="NETStandard.Library" version="[1.6.1,)" />
            </group>
            <group targetFramework="Xamarin.iOS10">
                <dependency id="System.Reactive" version="[4,)" />
                <dependency id="NETStandard.Library" version="[1.6.1,)" />
                <dependency id="Plugin.Permissions" version="[3,)" />
            </group>
            <group targetFramework="MonoAndroid10">
                <dependency id="System.Reactive" version="[4,)" />
                <dependency id="NETStandard.Library" version="[1.6.1,)" />
                <dependency id="Plugin.Permissions" version="[3,)" />
            </group>
        </dependencies>
    </metadata>
    <files>
        <!-- PCL -->
        <file src="..\Plugin.SpeechRecognition\bin\Release\netstandard2.0\Plugin.SpeechRecognition.*" target="lib\netstandard2.0" />

        <!-- android -->
        <file src="..\Plugin.SpeechRecognition.Android\bin\Release\Plugin.SpeechRecognition.*" target="lib\MonoAndroid10" />

        <!-- ios -->
        <file src="..\Plugin.SpeechRecognition.iOS\bin\Release\Plugin.SpeechRecognition.*" target="lib\Xamarin.iOS10" />
    </files>
</package>